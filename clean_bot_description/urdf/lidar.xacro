<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <!--
    This file adds a 2D LiDAR (laser) sensor to the robot model. It defines the 
    physical mounting link and the virtual Gazebo sensor plugin required for simulation.

    Physical Properties:
    - Joint: laser_joint (fixed to chassis at center-front, top).
    - Link: laser (cylindrical shape, 5cm radius, 4cm thickness).

    Gazebo Sensor Parameters:
    - Type: ray sensor.
    - Update Rate: 10 Hz.
    - Samples: 360 (one per degree).
    - Range: 0.3m to 12.0m.
    - FoV: 360 degrees (-3.14 to 3.14 rad).
    - ROS Topic: /scan.
    - Output Type: sensor_msgs/LaserScan.

    Assumptions:
    - The LiDAR is mounted such that its center of rotation is at the origin of the laser link.
    - The simulation uses the libgazebo_ros_ray_sensor.so plugin.
    -->

    <joint name="laser_joint" type="fixed">
        <parent link="chassis"/>
        <child link="laser"/>
        <!-- RPLIDAR A1 mounted with USB port facing BACK -->
        <!-- Fixed: LiDAR is now mounted facing forward -->
        <origin xyz="0.15 0 0.175" rpy="0 0 0"/>
    </joint>

    <link name="laser">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>



    <gazebo reference="laser">
        <material>Gazebo/Red</material>

        <sensor name="laser" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.3</min>
                    <max>12</max>
                </range>
            </ray>
            <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <argument>~/out:=scan</argument>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>laser_frame</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>
